<!DOCTYPE html>
<html>
<head>
  <title>LinkUpChat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<div class="row">
		<div class="navbar-default">
		  <ul class="nav nav-pills">
		  	<li><%= link_to "Projects", projects_path %></li>
		  	<li><%= link_to "My Calendars", calendars_path %></li>
		  	<% if can? :read, @calendars %>
		  	<li><%= link_to "All Calendars", :controller => :calendars, :action =>:all%></li>
		  	<% end %>
		  	<li><%= link_to "Events", events_path %></li>
			

		  	<% if can? :read, @users %>
		  	<li><%= link_to "Users", users_path %></li>
		  	<% end %>


		
	

	<ul class="nav nav-pills navbar-right">
	<% if current_user %>
		<li><%= current_user.first_name %></li>
		<li><%= link_to "LogOut", :controller => :sessions, :action => :destroy %></li>
	<% else %>
		<li><%= link_to "Login", :controller => :sessions, :action => :create %></li>
		<li id="right_margin"><%= link_to "Register", :controller => :users, :action => :new %></li>
	<% end %>
	</ul>
	</div>
	</div>
	<%= yield %>
</div>


</body>
</html>


