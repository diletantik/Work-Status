<%= form_for(@calendar) do |f| %>
  <% if @calendar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calendar.errors.count, "error") %> prohibited this calendar from being saved:</h2>

      <ul>
      <% @calendar.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :day_off %><br>
    <%= f.check_box :day_off %>
  </div>

  <div id = "date_area">
    <input type="text" data-provide='datepicker' id="date_picker">

    <div class="field">
      <%= f.label :time_start %><br>
      <%= f.time_select :time_start %>
    </div>
    <div class="field">
      <%= f.label :time_stop %><br>
      <%= f.time_select :time_stop %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <%= hidden_field( :calendar, :date) %>

  <div class="actions">
    <%= f.submit id: "calendar_submit" %>
  </div>
<% end %>

<script type="text/javascript">
  $('#calendar_submit').click(function(){
    var date = $('#date_picker').val()
    $('[name="calendar[date]"]').val(date);
  });

  $('#calendar_day_off').change(function() {
    $('#date_area').toggle(!this.checked);
  });
</script>