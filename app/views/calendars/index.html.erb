<p id="notice"><%= notice %></p>
<% if current_user.calendars.count > 0 %>
  <h1>Listing Calendars</h1>

  <table>
    <thead>
      <tr>
        <th>Day off</th>
        <th>Date</th>
        <th>Time start</th>
        <th>Time stop</th>
        <th>Description</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      
        <% current_user.calendars.each do |calendar| %>
          <tr>
            <td><%= calendar.day_off %></td>
            <td><%= calendar.date %></td>
            <td><%= calendar.time_start %></td>
            <td><%= calendar.time_stop %></td>
            <td><%= calendar.description %></td>
            <td><%= calendar.user_id %></td>
            <td><%= link_to 'Show', calendar %></td>
            <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
            <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>

      
    </tbody>
  </table>
<% else %>
      <h5>No Calendars for this User</h5>
<% end %>
<br>

<%= link_to 'New Calendar', new_calendar_path %>

