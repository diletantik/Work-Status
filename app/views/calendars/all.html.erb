<p id="notice"><%= notice %></p>
  
  

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Day off</th>
        <th>Time start</th>
        <th>Time stop</th>
        <th>Description</th>
        <th>User Name</th>
        <th>User Surname</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody> 
        
        
        <% @days_array.each do |day| %>

            <% day.each do |calendar| %>
              <tr>
                <td><%= calendar.date%></td>
                <td><%= calendar.day_off %></td>
                
                <td><%= calendar.time_start %></td>
                <td><%= calendar.time_stop %></td>
                <td><%= calendar.description %></td>
                <td><%= calendar.user.first_name%></td>
                <td><%= calendar.user.last_name%></td>
                <td><%= link_to 'Show', calendar %></td>
                <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
                <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <%end%>
        <%end%>


    </tbody>
  </table>

